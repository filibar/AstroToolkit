<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AstroToolkit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="astro-theme">
    <div class="stars-bg"></div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">
                    <i class="bi bi-stars text-warning me-2"></i>
                    <span class="gradient-text">AstroToolkit</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Home" ? "active" : "")" aria-current="page" href="/">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Map" ? "active" : "")" href="/Map">
                                <i class="bi bi-map"></i> Map
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Weather" ? "active" : "")" href="/Weather">
                                <i class="bi bi-cloud-moon"></i> Weather
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Tools" ? "active" : "")" href="/Tools">
                                <i class="bi bi-tools"></i> Tools
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a href="#" class="btn btn-outline-light me-2 btn-glow">
                            <i class="bi bi-person"></i> Log in
                        </a>
                        <a href="#" class="btn btn-primary btn-glow">
                            <i class="bi bi-person-plus"></i> Sign up
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="py-4 text-light mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3 gradient-text">AstroToolkit</h5>
                    <p class="text-light-50">
                        Your comprehensive toolkit for astrophotography planning, weather forecasting, and technical calculations.
                    </p>
                </div>
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled footer-links">
                        <li><a href="/" class="footer-link"><i class="bi bi-chevron-right"></i> Home</a></li>
                        <li><a href="/Map" class="footer-link"><i class="bi bi-chevron-right"></i> Dark Sky Map</a></li>
                        <li><a href="/Weather" class="footer-link"><i class="bi bi-chevron-right"></i> Astro Weather</a></li>
                        <li><a href="/Tools" class="footer-link"><i class="bi bi-chevron-right"></i> Astronomy Tools</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">Connect</h5>
                    <div class="social-icons">
                        <a href="#" class="social-icon" title="Twitter">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="social-icon" title="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-icon" title="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-icon" title="GitHub">
                            <i class="bi bi-github"></i>
                        </a>
                    </div>
                    <p class="mt-3 text-light-50">
                        &copy; 2025 AstroToolkit. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>