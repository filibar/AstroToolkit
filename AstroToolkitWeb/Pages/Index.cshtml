@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="jumbotron bg-dark text-light p-5 rounded mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4">AstroToolkit</h1>
                <p class="lead">
                    Your comprehensive toolkit for astrophotography planning, weather forecasting, and technical calculations.
                </p>
                <hr class="my-4 bg-light">
                <p>
                    Find dark sky locations, check weather conditions for stargazing, and use specialized tools to 
                    improve your astrophotography results.
                </p>
                <div class="mt-4">
                    <a class="btn btn-primary btn-lg me-2" href="/Map" role="button">
                        <i class="bi bi-map"></i> Find Dark Skies
                    </a>
                    <a class="btn btn-info btn-lg" href="/Weather" role="button">
                        <i class="bi bi-cloud-moon"></i> Check Weather
                    </a>
                </div>
            </div>
            <div class="col-md-4 text-center d-none d-md-block">
                <i class="bi bi-stars display-1 text-warning"></i>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-map text-primary mb-3" style="font-size: 2.5rem;"></i>
                    <h3 class="card-title">Dark Sky Map</h3>
                    <p class="card-text">
                        Find and share the best locations for astrophotography with light pollution data, user ratings, and photos.
                    </p>
                    <a href="/Map" class="btn btn-outline-primary">Explore Map</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cloud-moon text-primary mb-3" style="font-size: 2.5rem;"></i>
                    <h3 class="card-title">Astro Weather</h3>
                    <p class="card-text">
                        Get specialized astronomy weather forecasts with moon phases, cloud cover, and viewing quality ratings.
                    </p>
                    <a href="/Weather" class="btn btn-outline-primary">Check Weather</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calculator text-primary mb-3" style="font-size: 2.5rem;"></i>
                    <h3 class="card-title">Astronomy Tools</h3>
                    <p class="card-text">
                        Use specialized calculators for exposure times, field of view, depth of field, and polar alignment.
                    </p>
                    <a href="/Tools" class="btn btn-outline-primary">Use Tools</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row my-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Latest Dark Sky Locations</h2>
        </div>
        @foreach (var spot in Model.RecentSpots)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@spot.Name</h5>
                        <span class="badge bg-info">
                            Level @spot.LightPollutionLevel
                        </span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@spot.Description.Substring(0, Math.Min(100, spot.Description.Length))@(spot.Description.Length > 100 ? "..." : "")</p>
                        <div class="d-flex justify-content-between">
                            <div>
                                <small class="text-muted">Rating:</small>
                                <div>
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        if (i < spot.Rating)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                </div>
                            </div>
                            <div>
                                <small class="text-muted">Added:</small>
                                <div>@spot.CreatedDate.ToString("MMM d, yyyy")</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a href="/Map?spotId=@spot.Id" class="btn btn-sm btn-primary">View on Map</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-5 mb-4 py-4 bg-light rounded">
        <div class="col-md-6">
            <h2>Why Use AstroToolkit?</h2>
            <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item bg-transparent">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Find dark sky locations with accurate light pollution data
                </li>
                <li class="list-group-item bg-transparent">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Get specialized astronomy weather forecasts
                </li>
                <li class="list-group-item bg-transparent">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Calculate optimal camera settings with the 500 rule and NPF rule
                </li>
                <li class="list-group-item bg-transparent">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Share your favorite observation spots with the community
                </li>
                <li class="list-group-item bg-transparent">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Access all tools from any device - mobile, tablet or desktop
                </li>
            </ul>
        </div>
        <div class="col-md-6 mt-4 mt-md-0">
            <h2>Get Started</h2>
            <p class="mt-3">
                Join our community of astrophotographers and stargazers today. Create an account to save your favorite
                spots, contribute to the community map, and get personalized recommendations.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                <a href="#" class="btn btn-primary me-md-2">
                    <i class="bi bi-person-plus"></i> Sign Up
                </a>
                <a href="#" class="btn btn-outline-secondary">
                    <i class="bi bi-info-circle"></i> Learn More
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}