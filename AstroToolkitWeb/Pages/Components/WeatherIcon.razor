@if (!string.IsNullOrEmpty(IconCode))
{
    <img src="@GetIconPath()" alt="@IconCode" class="weather-icon" style="@Style" />
}

@code {
    [Parameter]
    public string? IconCode { get; set; }

    [Parameter]
    public string Style { get; set; } = "width: 32px; height: 32px;";

    private string GetIconPath()
    {
        if (string.IsNullOrEmpty(IconCode))
            return "_content/AstroToolkitWeb/images/weather/placeholder.svg";

        return $"_content/AstroToolkitWeb/images/weather/{IconCode}.svg";
    }
}