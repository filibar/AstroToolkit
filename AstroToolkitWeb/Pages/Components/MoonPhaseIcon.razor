
@namespace AstroToolkitWeb.Pages.Components
@using AstroToolkitWeb.Models

@if (Phase != null)
{
    <div class="moon-phase-icon" title="@Phase.PhaseName">
        <img src="@GetMoonPhaseIconPath()" alt="@Phase.PhaseName" width="@Size" height="@Size" />
    </div>
}

@code {
    [Parameter]
    public MoonPhase? Phase { get; set; }

    [Parameter]
    public int Size { get; set; } = 32;

    private string GetMoonPhaseIconPath()
    {
        if (Phase == null)
            return "images/moon/placeholder.svg";
            
        return $"images/moon/{Phase.GetPhaseIconResource().Replace('_', '-')}.svg";
    }
}

<style>
    .moon-phase-icon {
        display: inline-block;
    }
    
    .moon-phase-icon img {
        object-fit: contain;
    }
</style>
